@page "/eventtypelist"
@inherits EventTypeListBase
<PageTitle>Event Types</PageTitle>

<button type="button" class="btn btn-primary" style="margin-top: 1cm" @onclick="NavigateToCreateEventType">
    <i class="fa fa-plus"></i> Create Event Type
</button>

@if (eventTypes == null)
{
    <div class="loading">
        <h4 style="text-align: center; margin-top: 1cm">Loading...</h4>
    </div>
}
else
{
    @if (eventTypes.Any())
    {
        <div class="d-flex justify-content-center">
            <table class="table" style="width: 50%; margin-top: 1cm">
                <thead>
                    <tr>
                        <th colspan="2" class="table-header">Event Types</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eventType in eventTypes)
                    {
                        <tr>
                            <td>@eventType.EventTypeName</td>
                            <td class="button-container">
                                <button type="button" class="btn btn-secondary btn-sm" @onclick="() => NavigateToUpdateEventType(eventType.EventTypeId)">
                                    <i class="fa fa-pencil"></i> Edit
                                </button>
                                <button type="button" class="btn btn-danger btn-sm" @onclick="() => NavigateToDeleteEventType(eventType.EventTypeId)">
                                    <i class="fa fa-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p><em>No event type found.</em></p>
    }
}
